{{#post}}
<div id="single">
  <p id='page_id' style="display: none;">{{id}}</p>
  <p id='page_url' style="display: none;">{{url}}</p>
  <!-- PLEASE: replace the following 'example' with your own Disqus username -->
  <p id='disqus_username' style="display: none;">example</p>
  <div id="top">
    <div class="bar"></div>
    <a id="go-back" class="go-back" href="javascript:go_back()"><i class="mdi mdi-arrow-left"></i></a>
    <h3 class="subtitle">{{title}}</h3>
    <div class="social">
      {{> social}}
    </div>
    <div class="scrollbar"></div>
  </div>

  <div class="section">
    <div class="article">
      <div>
        <h1 class="title">{{title}}</h1>
        <div class="stuff">
          <span>{{date format="DD MMMM YYYY"}}</span>
          {{#if tags}}
          {{#foreach tags}}
          <span><a href="/tag/{{this}}">{{this}}</a></span>
          {{/foreach}}
          {{/if}}
        </div>
        <div class="content">
          {{content}}
        </div>
        <div class="comment link">Comments</div>
      </div>
    </div>
  </div>
</div>
{{/post}}
