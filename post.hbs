{{#with post}}
<div id="single">
  <div id="top">
    <div class="bar"></div>
    <a id="go-back" class="go-back" href="javascript:go_back()"><i class="mdi mdi-arrow-left"></i></a>
    <h3 class="subtitle">{{title}}</h3>
    <div class="social">
      {{> "social.hbs"}}
    </div>
    <div class="scrollbar"></div>
  </div>

  <div class="section">
    <div class="article">
      <div>
        <h1 class="title">{{title}}</h1>
        <div class="stuff">
          <span>{{date this.date "DD MMMM YYYY"}}</span>
          {{#if tags}}
          {{#each tags}}
          <span><a href="/tag/{{this}}">{{this}}</a></span>
          {{/each}}
          {{/if}}
        </div>
        <div class="content">
          {{{content}}}
        </div>
        <div class="comment link">Comments</div>
      </div>
    </div>
  </div>
</div>
{{/with}}
